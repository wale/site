---
import icon from "~/assets/icon.svg";
import iconFull from "~/assets/icon_full.svg";

const { class: className, ...props } = Astro.props;
---

<picture>
    <source
        srcset={(iconFull as unknown as ImageMetadata).src}
        media="(min-width: 800px)"
    />
    <img class:list={[className]} src={(icon as unknown as ImageMetadata).src} alt="Wale's icon" />
</picture>